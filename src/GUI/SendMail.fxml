<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1280.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="GUI.SendMailController">
    <stylesheets>
        <URL value="@sendmail.css" />
    </stylesheets>
   <children>
      <HBox alignment="CENTER" layoutX="515.0" layoutY="14.0" prefHeight="79.0" prefWidth="424.0">
         <children>
            <Label prefHeight="49.0" prefWidth="101.0" text="Send">
               <font>
                  <Font name="Cambria Bold" size="40.0" />
               </font>
            </Label>
            <Label prefHeight="49.0" prefWidth="297.0" text="an E-MAIL">
               <font>
                  <Font name="Cambria" size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox layoutX="319.0" layoutY="212.0" prefHeight="399.0" prefWidth="652.0" spacing="20.0">
         <children>
            <Label text="To :">
               <font>
                  <Font name="Cambria Bold" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="toadr" promptText="xyz@gmail.com" />
            <Label text="Object :">
               <font>
                  <Font name="Cambria Bold" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="obj" />
            <Label text="Core :">
               <font>
                  <Font name="Cambria Bold" size="17.0" />
               </font>
            </Label>
            <TextArea fx:id="core" prefHeight="168.0" prefWidth="652.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Button fx:id="retun" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#on_return_button" prefHeight="35.0" prefWidth="124.0" styleClass="search-button" stylesheets="@style.css" text="Return" textFill="WHITE" />
      <Button fx:id="send_btn" layoutX="583.0" layoutY="631.0" mnemonicParsing="false" onAction="#on_send_button" prefHeight="35.0" prefWidth="124.0" styleClass="search-button" stylesheets="@style.css" text="Send" textFill="WHITE" />
   </children>
</AnchorPane>
