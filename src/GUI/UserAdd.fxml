<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.UserAddController">
    <stylesheets>
        <URL value="@useradd.css" />
    </stylesheets>
   <children>
      <AnchorPane fx:id="anchor_user" layoutY="-25.0" prefHeight="425.0" prefWidth="605.0" style="-fx-background-color: Silver;">
         <children>
            <Button fx:id="add_button" layoutX="30.0" layoutY="353.0" mnemonicParsing="false" onAction="#add_button_action" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: navy;" text="Add" textFill="#f6f5f8">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font></Button>
            <TextField fx:id="name" layoutX="19.0" layoutY="106.0" promptText="First name" />
            <TextField fx:id="last_name" layoutX="19.0" layoutY="137.0" promptText="Last name" />
            <TextField fx:id="cin" layoutX="19.0" layoutY="168.0" promptText="CIN" />
            <TextField fx:id="email" layoutX="22.0" layoutY="233.0" promptText="e_mail" />
            <TextField fx:id="phone_number" layoutX="22.0" layoutY="265.0" promptText="Phone" />
            <ComboBox fx:id="role" layoutX="21.0" layoutY="302.0" prefWidth="150.0" promptText="Role" />
            <Label layoutX="21.0" layoutY="57.0" prefHeight="43.0" prefWidth="196.0" text="User details" textFill="#171717">
               <font>
                  <Font name="Cambria" size="34.0" />
               </font></Label>
            <TableView fx:id="user_t" layoutX="203.0" layoutY="100.0" prefHeight="230.0" prefWidth="392.0">
              <columns>
                <TableColumn fx:id="f_name" prefWidth="75.0" style="-fx-background-color: LightSalmon;" text="First name" />
                <TableColumn fx:id="l_name" prefWidth="90.0" style="-fx-background-color: LightSalmon;" text="Last name" />
                  <TableColumn fx:id="e_mail" prefWidth="131.0" style="-fx-background-color: lightsalmon;" text="E-mail" />
                  <TableColumn fx:id="role_u" prefWidth="95.0" style="-fx-background-color: lightsalmon;" text="Role" />
                  <TableColumn fx:id="id" prefWidth="95.0" text="id" />
              </columns>
            </TableView>
            <Button fx:id="edit" layoutX="397.0" layoutY="354.0" mnemonicParsing="false" onAction="#edit_user" prefHeight="25.0" prefWidth="51.0" style="-fx-background-color: green;" text="Edit" textFill="#f6f8f5">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font></Button>
            <Button fx:id="delete_user" layoutX="475.0" layoutY="354.0" mnemonicParsing="false" onAction="#delete_user" style="-fx-background-color: IndianRed;" text="Delete" textFill="#f8f4f4">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font></Button>
            <DatePicker fx:id="Birthdate" layoutX="22.0" layoutY="200.0" prefHeight="25.0" prefWidth="150.0" />
            <TextField fx:id="search_txt" layoutX="143.0" layoutY="355.0" promptText="User search" />
            <Button fx:id="search_btn" layoutX="303.0" layoutY="355.0" mnemonicParsing="false" onAction="#on_search_clicked" text="Search" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
