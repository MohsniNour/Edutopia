            <TextField fx:id="object" layoutX="37.0" layoutY="95.0" promptText="Object" />
            <Label layoutX="14.0" layoutY="21.0" prefHeight="43.0" prefWidth="276.0" text=" Complaint details">
               <font>
                  <Font name="Cambria" size="34.0" />
               </font></Label>
            <Label fx:id="countComplaint" layoutX="468.0" layoutY="65.0" prefHeight="17.0" prefWidth="157.0" />
            <Label layoutX="298.0" layoutY="65.0" prefHeight="17.0" prefWidth="149.0" text="Complaints number">
               <font>
                  <Font name="Arial Rounded MT Bold" size="12.0" />
               </font>
            </Label>
