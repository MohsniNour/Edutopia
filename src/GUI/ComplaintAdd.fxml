    <stylesheets>
        <URL value="@complaintadd.css" />
    </stylesheets>
   <children>
      <AnchorPane fx:id="add_btn" layoutX="2.0" layoutY="1.0" prefHeight="445.0" prefWidth="637.0">
         <children>
            <TableView fx:id="table_v" layoutX="298.0" layoutY="95.0" prefHeight="300.0" prefWidth="327.0">
              <columns>
                <TableColumn id="object" fx:id="object_c" prefWidth="110.0" style="-fx-background-color: lightsalmon;" text="Object" />
                <TableColumn fx:id="status_c" prefWidth="98.0" style="-fx-background-color: lightsalmon;" text="Status" />
                  <TableColumn fx:id="descri" prefWidth="120.0" style="-fx-background-color: lightsalmon;" text="Description" />
